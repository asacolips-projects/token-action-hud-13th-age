{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2]
    },
    "globals": {
        "Hooks": false,
        "CONFIG": false,
        "game": false,
        "foundry": false,
        "canvas": false
    }
}
